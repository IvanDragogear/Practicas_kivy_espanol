<WidAlfa>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: root.cl
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        font_size: 100
        markup: True
        text: '[color=000000][b]'+root.tx+'[/b][/color]'
    GridLayout:
        cols: 3
        Button:
            text: '1'
            on_press: root.act1()
        Button:
            text: '2'
            on_press: root.act2()
        Button:
            text: '3'
            on_press: root.act3()
        Button:
            text: '4'
            on_press: root.act4()
        Button:
            text: '5'
            on_press: root.act5()
        Button:
            text: '6'
            on_press: root.act6()
        Button:
            text: '7'
            on_press: root.act7()
        Button:
            text: '8'
            on_press: root.act8()
        Button:
            text: '9'
            on_press: root.act9()